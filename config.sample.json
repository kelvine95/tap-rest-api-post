{
    "streams": [
        {
            "name": "my_stream_name",
            "api_url": "https://api.example.com",
            "path": "/v1/data",
            "api_key": "YOUR_API_KEY_HERE",
            "api_key_header": "x-api-key",
            "primary_keys": [
                "id"
            ],
            "replication_key": "updated_at",
            "records_path": "$.data[*]",
            "body": {
                "param1": "value1",
                "param2": "value2"
            },
            "params": {
                "limit": 100
            },
            "pagination": {
                "strategy": "page_number",
                "page_param": "page"
            },
            "schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        }
    ]
}
